{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>{{ 'page.title_index'|trans }}</h1>
    </div>

    <div class="row">
        <div class="col-sm-12">

            <table class="table">
                <thead>
                <tr>
                    <th>{{ 'page.table.id'|trans }}</th>
                    <th>{{ 'page.table.name'|trans }}</th>
                    <th>{{ 'page.table.height'|trans }}</th>
                    <th>{{ 'page.table.width'|trans }}</th>
                    <th>{{ 'page.table.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>

                    <tr>
                        <th scope="row">{{ page.id }}</th>
                        <td>{{ page.name }}</td>
                        <td>{{ page.slug }}</td>
                        <td>{{ page.title }}</td>
                        <td>
                            <a href="">
                                {{ 'action.edit'|trans }}
                            </a>
                        </td>
                    </tr>

                </tbody>
                <tfoot>
                <tr>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                    <th>
                        <a href="{{ path('archetype_create') }}"
                           class="btn btn-primary pull-right" type="submit">{{ 'page.form.new_archetype'|trans }}</a>
                    </th>
                </tr>
                </tfoot>
            </table>

        </div>

    </div>
{% endblock %}
